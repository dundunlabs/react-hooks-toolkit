{
  "name": "react-hooks-toolkit",
  "version": "0.0.2",
  "description": "Some useful hooks you might need in your React application",
  "source": "src/*.{ts,tsx}",
  "main": "./dist/index.js",
  "module": "./dist/index.module.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.module.js",
      "types": "./dist/index.d.ts"
    },
    "./useSharedState": {
      "require": "./dist/useSharedState.js",
      "import": "./dist/useSharedState.module.js",
      "types": "./dist/useSharedState.d.ts"
    }
  },
  "files": [
    "./dist"
  ],
  "scripts": {
    "build": "microbundle build",
    "watch": "microbundle watch",
    "test": "jest"
  },
  "keywords": [
    "react",
    "react-native",
    "state"
  ],
  "author": "dung28-td",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.0",
    "@types/react": "^18.0.32",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "microbundle": "^0.15.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-jest": "^29.0.5",
    "typescript": "^5.0.3"
  },
  "peerDependencies": {
    "react": "^18.2.0"
  }
}
