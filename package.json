{
  "name": "react-hooks-toolkit",
  "version": "0.0.4",
  "description": "Some useful hooks you might need in your React application",
  "source": [
    "./src/index.ts",
    "./src/hooks/useSharedState.ts"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.module.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.modern.mjs",
      "module": "./dist/index.module.js",
      "require": "./dist/index.js"
    },
    "./hooks/useSharedState": {
      "types": "./dist/hooks/useSharedState.d.ts",
      "import": "./dist/useSharedState.modern.mjs",
      "module": "./dist/useSharedState.module.js",
      "require": "./dist/useSharedState.js"
    }
  },
  "files": [
    "./dist",
    "./{hooks}/**/package.json"
  ],
  "scripts": {
    "build": "microbundle build",
    "watch": "microbundle watch",
    "test": "jest"
  },
  "keywords": [
    "react",
    "react-native",
    "state"
  ],
  "author": "dung28-td",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.0",
    "@types/react": "^18.0.32",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "microbundle": "^0.15.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-jest": "^29.0.5",
    "typescript": "^5.0.3"
  },
  "peerDependencies": {
    "react": "^18.2.0"
  }
}
